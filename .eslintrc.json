{
    "env": {
        "browser": true,
        "es6": true,
        "webextensions": true,
        "jquery": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:no-unsanitized/DOM"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-constant-condition": ["error", { "checkLoops": false }]
    }
}
